version: ´3.8´

services:
  mysql:
    image: mysql:latest
    container_name: mysql_db
    restart: unless-stopped 
    environment:
      MYSQL_ROOT_PASSWORD: 5804220
      MYSQL_DATABASE: api_tareas
    ports: 
      "3307:3306"
    volume:
      mysql_data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-5804220"]
      interval: 10s
      timeout: 5s
      retries: 5

api_tareas:
  build:
    context:
    dockerfile: Dockerfile
  container_name: spring_app
  restart: unless-stopped
  ports: "8080:8080"
  depends_on:
    mysql:
      condition: service_healthy
  environment:
    SPRING_DATASOURCE_URL: jdbc:mysql://localhost:3306/api_tareas
    SPRING_DATASOURCE_USERNAME: root
    SPRING_DATASOURCE_PASSWORD: 5804220
  volumes:
    ./log:/logs

volumes:
  mysql_data:
